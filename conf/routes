# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.IndexController.index()
GET     /login                      controllers.LogController.loginPage()
GET     /register                   controllers.RegisterController.registerPage()
GET     /logout                     controllers.LogController.logout()

POST    /login                      controllers.LogController.loginComplete()
POST    /register                   controllers.RegisterController.registerComplete()

GET     /user/all                   controllers.Application.allUsers()
GET     /user/:username             controllers.Application.profile(username)
GET     /user/:username/following   controllers.Application.following(username)
GET     /user/:username/followers   controllers.Application.followers(username)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
